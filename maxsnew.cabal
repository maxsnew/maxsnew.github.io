name:                maxsnew
version:             0.1.0.0
-- synopsis:
-- description:
homepage:            https://github.com/maxsnew/maxsnew#readme
license:             BSD3
license-file:        LICENSE
author:              Max S. New
maintainer:          maxsnew@gmail.com
copyright:           2017 Max S. New
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Lib
  build-depends:       base >= 4.7 && < 5,
                       aeson,
                       bytestring,
                       containers,
                       hakyll >= 4.0 && < 5,
                       filepath,
                       mtl,
                       process,
                       text,
                       yaml
  default-language:    Haskell2010

executable maxsnew-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N -dynamic
  build-depends:       base
                     , maxsnew
  default-language:    Haskell2010

test-suite maxsnew-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , maxsnew
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N -dynamic
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/maxsnew/maxsnew
